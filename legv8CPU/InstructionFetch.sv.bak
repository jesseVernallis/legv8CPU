`include "headers/bus.svh"
`include "headers/files.svh"

module instruction_fetch #(parameter INSTRPATH=`INSTUCTION_FILE,
								  parameter INSTRNUM=213//bytes)(
input logic clk,
reset,
input logic [`WORDSIZE] addr,
output logic[`INSTRSIZE] instr
);

 logic [`INSTR_LEN-1:0] instr_data [INSTRNUM]
 
 intital begin
	 $readmemb(INSTRPATH,instr_data)
 end
 
 always_ff @(posedge clk, posedge reset) begin
	 if(reset) begin
		 instr <= `INSTRSIZE'x;
	 end else begin
		 instr <= instr_data[addr/4];
	 end
 end
 
endmodule : instuction_fetch